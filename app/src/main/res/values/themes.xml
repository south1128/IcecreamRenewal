<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Icecream_renual" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/newblue</item>
        <item name="colorOnPrimary">@color/searchboxblue</item>
        <!-- Secondary brand color. -->
<!--        floating button boarder color and cursor-->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorAccent">@color/blue</item>
<!--        sub floating button icon color-->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Datepicker.blue" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Datepicker.red" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Datepicker.yellow" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="Datepicker.green" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>



    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
<!--        <item name="postSplashScreenTheme">@style/Theme.Icecream_renual</item>-->
    </style>


    <TextView
        android:id="@+id/foodicon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="5"
        android:text="@string/lemon"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_foodname"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="lemon"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/foodicon"
        app:layout_constraintStart_toStartOf="@+id/foodicon"
        app:layout_constraintTop_toBottomOf="@+id/foodicon" />

    <TextView
        android:id="@+id/foodquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="5"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_foodname"
        app:layout_constraintStart_toStartOf="@+id/tv_foodname"
        app:layout_constraintTop_toBottomOf="@+id/tv_foodname" />


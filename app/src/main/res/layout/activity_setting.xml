<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity">

        <!--icons -->

        <ImageView
            android:id="@+id/s_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/grey_background"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/profile"
            app:tint="?attr/colorPrimary"/>

        <ImageView
            android:id="@+id/s_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/s_setting"
            app:layout_constraintEnd_toStartOf="@+id/s_setting"
            app:layout_constraintTop_toTopOf="@+id/s_setting"
            app:srcCompat="@mipmap/alarm"
            app:tint="?attr/colorPrimary"/>

        <!--username-->

        <ImageView
            android:id="@+id/icon_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_setting" />

        <ImageView
            android:id="@+id/icon_warning2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/help"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider7" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/username"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/icon_warning"
            app:layout_constraintStart_toEndOf="@+id/icon_warning" />

        <TextView
            android:id="@+id/tv_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/help"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/icon_warning2"
            app:layout_constraintStart_toEndOf="@+id/icon_warning2" />

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_warning" />

        <!--timer-->

        <ImageView
            android:id="@+id/icon_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/alarm_timer"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/icon_timer"
            app:layout_constraintStart_toEndOf="@+id/icon_timer" />

        <View
            android:id="@+id/divider5"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/whattime" />

        <TextView
            android:id="@+id/whattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="06:00:00"
            app:layout_constraintStart_toStartOf="@+id/tv_timer"
            app:layout_constraintTop_toBottomOf="@+id/divider10" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Push Alert"
            app:layout_constraintBottom_toBottomOf="@+id/whattime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/whattime" />

        <View
            android:id="@+id/divider10"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@mipmap/dashline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_timer"
            android:backgroundTint="?attr/colorPrimary"/>


        <!--help-->


        <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@mipmap/dashline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_help"
            android:backgroundTint="?attr/colorPrimary"/>

        <ImageView
            android:id="@+id/icon_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider5" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="theme"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/icon_help"
            app:layout_constraintStart_toEndOf="@+id/icon_help" />


        <View
            android:id="@+id/divider7"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bluetheme" />



        <ImageView
            android:id="@+id/greentheme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/stroke"
            android:padding="10dp"
            app:tint="?attr/colorPrimary"
            android:background="@drawable/themepreview"
            android:backgroundTint="@color/searchboxgreen"
            app:layout_constraintBottom_toBottomOf="@+id/redtheme"
            app:layout_constraintStart_toEndOf="@+id/redtheme"
            app:layout_constraintTop_toTopOf="@+id/redtheme" />

        <ImageView
            android:id="@+id/yellowtheme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/stroke"
            android:padding="10dp"
            app:tint="?attr/colorPrimary"
            android:background="@drawable/themepreview"
            android:backgroundTint="@color/searchboxyellow"
            app:layout_constraintBottom_toBottomOf="@+id/greentheme"
            app:layout_constraintStart_toEndOf="@+id/greentheme"
            app:layout_constraintTop_toTopOf="@+id/greentheme" />

        <View
            android:id="@+id/themesave"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/boarder_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider12" />

        <TextView
            android:id="@+id/themesave_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            app:layout_constraintBottom_toBottomOf="@+id/themesave"
            app:layout_constraintEnd_toEndOf="@+id/themesave"
            app:layout_constraintStart_toStartOf="@+id/themesave"
            app:layout_constraintTop_toTopOf="@+id/themesave" />

        <ImageView
            android:id="@+id/redtheme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/stroke"
            android:padding="10dp"
            app:tint="?attr/colorPrimary"
            android:background="@drawable/themepreview"
            android:backgroundTint="@color/searchboxred"
            app:layout_constraintBottom_toBottomOf="@+id/bluetheme"
            app:layout_constraintStart_toEndOf="@+id/bluetheme"
            app:layout_constraintTop_toTopOf="@+id/bluetheme"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/bluetheme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/stroke"
            android:padding="10dp"
            app:tint="?attr/colorPrimary"
            android:background="@drawable/themepreview"
            android:backgroundTint="@color/searchboxblue"
            app:layout_constraintStart_toStartOf="@+id/tv_help"
            app:layout_constraintTop_toBottomOf="@+id/divider12"
             />


        <View
            android:id="@+id/divider11"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_warning2" />

        <View
            android:id="@+id/themenow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_help" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

